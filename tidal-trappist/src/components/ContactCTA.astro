---
import CallToAction from './CallToAction.astro';
import Icon from './Icon.astro';
---

<aside>
    <div class="stack gap-2 text-center">
        <p><a href="mailto:registrar@huronplayschool.com"><Icon icon="envelope" />Contact Our Registrar</p></a>
        <p>383 Huron St., Toronto, Ontario</p>
        <p>+1 (416) 977-1109</p>
        <p>Monday - Friday: 9 AM - 6 PM</p>
    </div>	
	<CallToAction href="https://www.himama.com/online_registration/apply/huron-playschool">
		Submit a request
		<Icon icon="paper-plane-tilt" size="1.2em" />
	</CallToAction>
</aside>

<style>
	aside {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 3rem;
		border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
		padding-left: 3rem;
		padding-right: 3rem;
		padding-top: 1rem;
		padding-bottom: 1rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	h2 {
		font-size: var(--text-xl);
		text-align: center;
		max-width: 15ch;
	}

	@media (min-width: 50em) {
		aside {
			padding-left: 7rem;
			padding-right: 7rem;
			padding-top: 2rem;
			padding-bottom: 2rem;
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: space-between;
		}

		h2 {
			font-size: var(--text-3xl);
			text-align: left;
		}
	}
</style>
